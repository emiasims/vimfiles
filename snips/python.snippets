#priority -2

######################
## Common Constructs #
######################
#snippet #! "Shebang header for python scripts" b
##!/usr/bin/env python
## -*- coding: utf-8 -*-
#$0
#endsnippet

#snippet imp "import" b
#import ${0:module}
#endsnippet

#snippet from "import from" b
#from ${1:package} import ${0:module}
#endsnippet

snippet if "if block" bA
if $1:
	${2:pass}
endsnippet

snippet ife "if else block" bA
if $1:
	${2:pass}
else:
	${3:pass}
endsnippet

snippet ifel "if elif else block" bA
if ${1:cond}:
	${3:pass}
elif ${2:cond}:
	${4:pass}
else:
	${5:pass}
endsnippet

snippet el "else block" bA
else:
	${3:pass}
endsnippet

snippet ei "elif bloc" bA
elif ${1:cond}:
	${2:pass}
endsnippet

snippet ifmain "if name is main cli block" bA
if __name__ == "__main__":
	${1:${VISUAL:main()}}
endsnippet

snippet pdb "python debugger" bA
__import__('pdb').set_trace()
endsnippet

snippet ipdb "ipython debugger" bA
__import__('ipdb').set_trace()
endsnippet

snippet iem "embed ipython" bA
__import__('IPython').embed()
endsnippet

snippet init "init dunder method" bA
def __init__(self, $1):
	${2:pass}
endsnippet

snippet call "call dunder method" bA
def __call__(self, $1):
	${2:pass}
endsnippet

###########
# Looping #
###########

snippet lcp "list comprehension" A
[${1} for ${2} in ${3:${VISUAL}}]${0}
endsnippet

snippet dcp "dict comprehension" A
{${1}: ${2} for ${3} in ${4:${VISUAL}}}${0}
endsnippet

snippet scp "set comprehension" A
{${1} for ${2} in ${3:${VISUAL}}}${0}
endsnippet

snippet for "for loop" bA
for ${1:item} in ${2:iterable}:
	${3:${VISUAL:pass}}
endsnippet

snippet fel "for else loop" bA
for ${1:item} in ${2:iterable}:
	${3:${VISUAL:pass}}
else:
	${4:pass}
endsnippet

snippet whi "while loop" bA
while ${1:condition}:
	${0:${VISUAL}}
endsnippet

snippet wel "while else loop" bA
while ${1:condition}:
	${0:${VISUAL}}
else:
	${2:pass}
endsnippet

snippet dowi "do while loop" bA
while True:
	${0:${VISUAL}}

	if ${1:condition}:
		break
endsnippet

snippet trye "try except block" bA
try:
	${0:${VISUAL:pass}}
except ${1:Error}:
	${2:pass}
endsnippet

snippet trf "try except block" bA
try:
	${0:${VISUAL:pass}}
finally:
	${1:pass}
endsnippet



