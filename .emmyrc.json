{
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$HOME/.local/share/nvim/lazy",
      "$HOME/.config/nvim/lua",
      "$HOME/.config/nvim/mia_plugins"
    ],
    "ignoreGlobs": ["**/*_spec.lua"]
  }
}
