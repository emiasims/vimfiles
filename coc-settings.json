{
  "coc.preferences.formatOnType": false,
  "coc.preferences.jumpCommand": "edit",
  "diagnostic.errorSign": "✖",   // U-2716
  "diagnostic.warningSign": "⚠", // U-26A0
  "diagnostic.infoSign": "➤",    // U-27A4
  "diagnostic.hintSign": "➤",
  "diagnostic.maxWindowHeight": 14,
  "coc.source.word.filetypes": ["text", "org", "markdown"],
  "snippets.ultisnips.directories": ["snips"],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
  "snippets.loadFromExtensions": false,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/bin/black",
}
